@model pickuphockey.Models.ExternalLoginListViewModel
@using Microsoft.Owin.Security

<h4>Use a social service to log in.</h4>
<hr />
@{
    var loginProviders = Context.GetOwinContext().Authentication.GetExternalAuthenticationTypes();
    var authenticationDescriptions = loginProviders as IList<AuthenticationDescription> ?? loginProviders.ToList();
    if (authenticationDescriptions.Any()) {
        using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = Model.ReturnUrl })) {
            @Html.AntiForgeryToken()
            <div id="socialLoginList">
                <p>
                    @foreach (var p in authenticationDescriptions)
                    {
                        if (p.AuthenticationType.ToLower().Equals("google"))
                        {
                            <button type="submit" id="@p.AuthenticationType" name="provider" value="@p.AuthenticationType" title="Log in using your @p.Caption account"><img src="~/Content/google_signin.png" width="197" height="43"/></button>
                        }
                        else if (p.AuthenticationType.ToLower().Equals("facebook"))
                        {
                            <button type="submit" id="@p.AuthenticationType" name="provider" value="@p.AuthenticationType" title="Log in using your @p.Caption account"><img src="~/Content/facebook_signin.png" width="197" height="47" /></button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-default" id="@p.AuthenticationType" name="provider" value="@p.AuthenticationType" title="Log in using your @p.Caption account">@p.AuthenticationType</button>
                        }
                    }
                </p>
            </div>
        }
    }
}
