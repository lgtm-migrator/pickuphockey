@model IEnumerable<pickuphockey.Models.Session>
@{
    ViewBag.Title = "Pickup Sessions";
}

@if (User.IsInRole("Admin")) {
    <p>
        <br/>@Html.ActionLink("Create New", "Create")
    </p>
}
<div class="row">
    <div>
        <h2>Upcoming Pickups</h2>
        @Html.Partial("_CurrentPickupsPartial", Model)
    </div>
</div>

<div class="row">
    <div>
        <h2>Past Pickups</h2>
        @Html.Partial("_PastPickupsPartial", Model)
    </div>
</div>
