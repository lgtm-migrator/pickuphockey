@model IEnumerable<pickuphockey.Models.BuySell>
@{
    ViewBag.Title = "Unmarked Sent";
}
<h2>Unmarked Sent - @Model.Count().ToString()</h2>
<p>
    View each session below, and if you've sent payment, check the 'Sent' box.
</p>

@if (Model != null)
{
    var count = 0;

    <table class="table">
        @foreach (var item in Model.OrderByDescending(r => r.SessionId))
        {
            count++;
            <tr>
                <td valign="top">
                    @count. @Html.ActionLink(item.Session.SessionDate.ToString("dddd, MM/dd/yyyy, HH:mm"), "Details", "Sessions", new { id = item.SessionId }, null)
                </td>
            </tr>
        }
    </table>
}
