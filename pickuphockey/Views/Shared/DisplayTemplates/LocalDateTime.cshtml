@using System.Globalization
@model DateTime?
@{
    var pstZone = TimeZoneInfo.FindSystemTimeZoneById(System.Configuration.ConfigurationManager.AppSettings["DisplayTimeZone"]);
}

@(Model.HasValue ? TimeZoneInfo.ConvertTimeFromUtc(Model.Value, pstZone).ToString(CultureInfo.InvariantCulture) : string.Empty)
