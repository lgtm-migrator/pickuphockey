@model DateTime?
@{
    var pstZone = TimeZoneInfo.FindSystemTimeZoneById(System.Configuration.ConfigurationManager.AppSettings["DisplayTimeZone"]);
}
@Html.TextBox("", (Model.HasValue ? TimeZoneInfo.ConvertTimeFromUtc(Model.Value, pstZone).ToString("dddd, MM/dd/yyyy, HH:mm") : string.Empty), new { @class = "form-control text-box single-line", @type = "datetime" })