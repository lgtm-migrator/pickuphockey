@model pickuphockey.Models.Session
@{ 
    var count = Model.UnmarkedSent.Count();
    var word = count > 1 ? "spots" : "spot";
    var word2 = count > 1 ? "are" : "is";
}
@if (count > 0) {
    <div class="banner-message">
        <h3>You have @Html.ActionLink(count.ToString(), "UnmarkedSent") @word you bought that @word2 not marked as payment sent. You cannot buy until you resolve pending payments.</h3>
    </div>
}
